<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <!-- include sdk c# code to build -->
    <Compile Include="sdk/**/*.cs" Exclude="sdk/obj/**/*.cs;sdk/bin/**/*.cs" />
    <!-- include module code -->
    <Compile Include="*.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Disable System.IO implicit using to avoid conflict with Dagger.Directory -->
    <Using Remove="System.IO" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include Dagger SDK Analyzers for IDE support -->
    <Analyzer Include="sdk/analyzers/dotnet/cs/Dagger.SDK.Analyzers.dll" />
    <Analyzer Include="sdk/analyzers/dotnet/cs/Dagger.SDK.CodeFixes.dll" />
  </ItemGroup>

</Project>
